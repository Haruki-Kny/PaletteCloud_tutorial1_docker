<h2><%= post.title %></h2>
<p><%= simple_format post.body %></p>

<h3>Comments<h3>
<% if post.comments.any? %>
  <% post.comments.each do |comment| %>
    <% if comment.id != nil %>
      <li>
        <%= comment.body %>
        <%= link_to '[Edit]', edit_post_comment_path(post, comment), class: 'command' %>
        <%= link_to '[x]', 
          post_comment_path(post, comment), 
          method: :delete, 
          class: 'command',
          data: {confirm: 'Sure?'} %>
      </li>
    <% end %>
  <% end %>
<% end %>
<%= form_for ([post, @comment]) do |f| %>
  <p>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <p>
    <%= link_to '[Back]', posts_path %>
  </p>
<% end %>
